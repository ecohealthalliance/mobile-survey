@import '{gq:base-styles}/globals'

verticallyCenter($position=true)
  if $position
    position absolute
  top 50%
  transform translate(0,-50%)

$blue = #337AB7

.survey-admin
  overflow hidden
  h3
    font-size 1.2em

.survey-admin--nav
  background white
  border-bottom 3px solid $primary
  h2
    font-size 1.5em
    margin 0
    padding-top .7em

.survey-admin--content
  margin-top 15px
  padding-bottom 100px

.create-form
  margin-bottom 20px

.form--header
  h4
  button
  a
    display inline-block
    vertical-align middle
  h4
    margin-right 10px
    margin-left 10px

.form--details
  margin 20px 0

.form-link
  padding 0
  overflow hidden
  .sortable-handle
    position absolute
    height 100%
    width 40px
    margin 0
    i
      position absolute
      width 100%
      top 50%
      transform translate(0,-50%)
      text-align center
  a
    padding 15px 15px 15px 45px
    display block
    &:hover
      background #f9f9f9
      text-decoration none

#toggleTrigger
  position relative
  z-index 2

#map
  height 400px
  width 100%
  top -15px
  .leaflet-right
    right 5%

.nav-floating-row
  bottom 0
  position relative
  z-index 2

.tab-content-floating-row
  position absolute
  top 25px
  left 15px
  padding 30px 20px
  z-index 2
  background rgba(255, 255, 255, .8)
  border-radius 4px

.map-floating-row
  position relative
  z-index 1
  margin-left -10%
  margin-right -10%

.buttons-floating-row
  margin-top 25px

.trigger-tabs
  margin-left -15px
  margin-right -15px

.trigger-nav-small > li > a
  padding 5px 10px
  border none
  border-radius 0

.trigger-nav-small > li > a:hover
  border none

.trigger-nav-small > li > a:focus
  border none

.trigger-nav-small > li.active > a
  border none
  width 100%

.trigger-nav-small > li.active > a:hover
  border none

.trigger-nav-small > li.active > a:focus
  border none

.trigger-nav-small > li
  background-color #eee
  border thin solid #333
  margin-right 1px

.trigger-nav-small
  margin-bottom 5px
  border-bottom none

.address-searching-spinner
  position relative
  top -22px
  float right
  margin-right 20px
  font-weight bold
  color $blue

.visible
  opacity 1

.invisible
  opacity 0

input.inline-30
  width 29.5%
  display inline

input.inline-70
  width 69.5%
  display inline
  float right

.searchBar
  position relative
  width 100%
  border-left 0
  border-right 0
  font-size 1em

#searchIcon
  verticallyCenter()
  left 10px
  color $blue

.token
  max-width 95% !important

.token-label
  overflow hidden !important
  max-width 100% !important

.tokenfield
  padding-left 25px

.twitter-typeahead
  width 80% !important
  margin-left 5px

.token-input.tt-input
  width 100% !important

.typeahead-code
  min-width 15%
  font-size 115%
  font-weight bold
  font-weight 800
  color #666

.typeahead-info
  color #666
  font-size 95%
  .typeahead-additional-info
    display block
    font-size 85%
    color #999
    font-style italic
  > span
    text-transform capitalize

.typeahead-footer
  color #666
  font-size 95%
  margin 2px 0 2px 15px

.pull-middle
  display table-cell
  vertical-align middle
  float none

#location
#datetime
  min-height 400px

#location
  width 100%
  position relative

#datetime
  margin -15px -10% 0 -10%
  padding 60px 12%
  background #f9f9f9

$trigger-types = {
  location: '\f041'
  datetime: '\f017'
}

$question-types = {
  multipleChoice: '\f0ca'
  checkboxes: '\f046'
  shortAnswer: '\f068'
  longAnswer: '\f036'
  number: '\f292'
  date: '\f073'
  datetime: '\f017'
  scale: '\f1de'
}

.survey--details
  .form
    margin-bottom 30px
  .description
    margin-bottom 30px
  .questions
    margin-left 15px
  .question
    margin-bottom 5px
  .trigger
  .question-type
    margin-right 4px
    &::before
      font-family 'FontAwesome'
      font-size 1em
      color #555
  .trigger
    content '\f0e7'
    for type, unicode in $trigger-types
      &.{type}
        &::before
          content unicode
  .question-type
    for type, unicode in $question-types
      &.{type}
        &::before
          content unicode

.controls
  width 80px

#tableFilter
  width 300px
  float right

.surveys
  .form-link
    a
      padding-left 15px

.modal-header
  .close
    position absolute
    top 15px
    right 15px

.create-survey-form
  input
  textarea
    min-width 100%
  textarea
    min-height 150px
