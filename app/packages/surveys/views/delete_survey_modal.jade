template(name="delete_survey_modal")
  #delete-survey-modal.modal.fade(tabindex="-1" role="dialog")
    form.modal-dialog
      .modal-content
        .modal-header
          button(type="button" class="close" data-dismiss="modal" aria-label="Close")
            i.mdi.mdi-close-circle
        .modal-body
          p Are you sure you want to delete this survey?

        .modal-footer
          button.btn.btn-default(data-dismiss='modal' aria-hidden='true' type='button') Cancel
          button.btn.btn-primary#confirm-delete-survey Confirm
