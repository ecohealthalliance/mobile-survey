@import '{gq:base-styles}/variables'

.loading
  position absolute
  top 45%
  left 50%
  transform translate(-50%, -50%)
  color $m-gray

.loading-spinner
  font-size 8em
  &.inline-icon
    font-size 1em
    padding-left .1em
    padding-right .1em
  &.small
    font-size 4em
  &.space-top
    margin-top 4em
