
verticallyCenter($position=true)
  if $position
    position absolute
  top 50%
  transform translate(0,-50%)

$blue = #337AB7

.survey-admin
  h3
    font-size 1.2em

.survey-admin--nav
  background white
  border-bottom 3px solid $primary
  h2
    font-size 1.5em
    margin 0
    padding-top .7em

.survey-admin--content
  margin-top 15px

.create-form
  margin-bottom 20px

.form-details
  margin 20px 0

.form-link
  padding 0
  overflow hidden
  .sortable-handle
    position absolute
    height 100%
    width 40px
    margin 0
    i
      position absolute
      width 100%
      top 50%
      transform translate(0,-50%)
      text-align center
  a
    padding 15px 15px 15px 45px
    display block
    &:hover
      background #f9f9f9
      text-decoration none

#toggleTrigger
  position relative
  z-index 2

#map
  height 400px
  width 100%

.nav-floating-row
  bottom 0
  position relative
  z-index 2

.tab-content-floating-row
  position relative
  z-index 2

.map-floating-row
  position relative
  z-index 1
  margin-left -4%
  margin-right -4%
  margin-bottom -115px
  top -95px

.buttons-floating-row
  position relative
  z-index 1

.trigger-tabs
  margin-left -15px
  margin-right -15px

.trigger-nav-small > li > a
  padding 5px 10px
  border none
  border-radius 0

.trigger-nav-small > li > a:hover
  border none

.trigger-nav-small > li > a:focus
  border none

.trigger-nav-small > li.active > a
  border none
  width 100%

.trigger-nav-small > li.active > a:hover
  border none

.trigger-nav-small > li.active > a:focus
  border none

.trigger-nav-small > li
  background-color #eee
  border thin solid #333
  margin-right 1px

.trigger-nav-small
  margin-bottom 5px
  border-bottom none

.address-searching-spinner
  position relative
  top -22px
  float right
  margin-right 20px
  font-weight bold
  color $blue

.visible
  opacity 1

.invisible
  opacity 0

input.inline-30
  width 29.5%
  display inline

input.inline-70
  width 69.5%
  display inline
  float right

.searchBar
  position relative
  width 100%
  border-left 0
  border-right 0
  font-size 1em

#searchIcon
  verticallyCenter()
  left 10px
  color $blue

.token
  max-width 95% !important

.token-label
  overflow hidden !important
  max-width 100% !important

.tokenfield
  padding-left 25px

.twitter-typeahead
  width 80% !important
  margin-left 5px

.token-input.tt-input
  width 100% !important

.typeahead-code
  min-width 15%
  font-size 115%
  font-weight bold
  font-weight 800
  color #666

.typeahead-info
  color #666
  font-size 95%
  .typeahead-additional-info
    display block
    font-size 85%
    color #999
    font-style italic
  > span
    text-transform capitalize

.typeahead-footer
  color #666
  font-size 95%
  margin 2px 0 2px 15px

.pull-middle
  display table-cell
  vertical-align middle
  float none
