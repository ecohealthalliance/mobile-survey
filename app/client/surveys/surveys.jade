template(name="surveys")
  .container-fluid-padded
    .page-header
      h2 Surveys
        a#add-survey.btn.btn-sm(data-toggle="modal" data-target="#create-survey-modal")
          i.mdi.mdi-plus-circle Add Survey

      if fetched
        ul.list-group.surveys
          each surveys
            li.list-group-item.form-link
              a(href="{{pathFor 'survey_admin_details' id=parseId}}")= title
              a.btn.btn-danger.delete(
                data-toggle="modal"
                data-target="#delete-survey-modal"
                data-id=parseId)
                | Delete

    +create_survey_modal survey=surveyCollection
    +delete_survey_modal surveys=surveyCollection

template(name="no_surveys")
  p No surveys were found
