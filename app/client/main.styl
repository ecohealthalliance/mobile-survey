.container-fluid
  padding 0 5%

.sortable-handle
  cursor move
  font-size 2em
  margin-right .1em

.delete
  position absolute
  right 15px
  top 50%
  transform translate(0, -50%)
  font-size 1.75em
  color #D9534F
  &:hover
    cursor pointer
    color darken(@color, 15%)

.list-group-item
  span
    vertical-align middle

.sortable-ghost
  background #f9f9f9

 .navbar
  margin-bottom 0
  border-radius 0
